{
  "root": {
    "replacement_target": "replacement_target",
    "text": {
      "text": "Linux Settings UI"
    }
  },
  "onload_actions_list": {
    "actions": [
      {
        "action_id": "get_all_settings"
      }
    ]
  },
  "subscription_info": {
    "subscriptions": [
      {
        "index": 1,
        "actions_list": {
          "actions": [
            {
              "action_id": "handle_settings_change"
            }
          ]
        }
      }
    ],
    "subscription_index_action": {
      "actions": [
        {
          "jq_action": {
            "transform_expression": "1"
          },
          "conditional": {
            "jq_conditional": [".[\"$result\"].type == \"settings\""]
          }
        }
      ]
    },
    "preprocess": {
      "actions": [
        {
          "parseAction": {
            "string_to_json": true
          }
        }
      ]
    }
  },
  "configured_actions": {
    "get_all_settings": {
      "actions": [
        {
          "apply_template_to_context_action": {
            "template": "{ 'action': 'get_all_settings' }",
            "target_id": "JsonStr"
          }
        },
        {
          "parse_action": {
            "context_id": "JsonStr",
            "target_id": "Json",
            "string_to_json": true
          }
        },
        {
          "serialize_action": {
            "context_id": "Json",
            "target_id": "JsonSerialized",
            "json": true
          }
        },
        {
          "server_action": {
            "channel_index": 1,
            "context_id": "JsonSerialized"
          }
        }
      ]
    },
    "handle_settings_change": {
      "actions": [
        {
          "jq_action": {
            "transform_expression": ".payload"
          }
        },
        {
          "store_to_global_context_action": {
            "target_id": "latest_settings"
          }
        },
        {
          "debug": {
            "context_id": "."
          }
        }
      ]
    }
  }
}
